@model WebApplication5.Models.ComandaData

@{
    ViewData["Title"] = "Edit";
}




<h1>Edit</h1>

<h4>Comanda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pretTotal" class="control-label"></label>
                <input asp-for="pretTotal" class="form-control" />
                <span asp-validation-for="pretTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <datalist id="stat">
                    <option>New</option>
                    <option>Pregatire</option>
                    <option>Livrare</option>
                    <option>Finalizare</option>

                </datalist>

                <label asp-for="status" class="control-label"></label>
                <input asp-for="status" class="form-control" list="stat" />
               


                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="dateAndHour" class="control-label"></label>
                <input asp-for="dateAndHour" class="form-control" />
                <span asp-validation-for="dateAndHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (@Model.status.IndexOf("fin", 0, StringComparison.OrdinalIgnoreCase)==-1)
{

    <a asp-action="FinishComanda" asp-route-id="@Model?.Id">Finish comanda</a>

}








<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
